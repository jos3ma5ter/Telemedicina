@page
@model HospiEnCasa.App.Frontend.Pages.FamiliarF.ListaFamiliaresModel
@{
    ViewData["Title"] = "Busqueda Familiar";
}
<div class="formularios">
    <h1>Listado de Familiares</h1>
    <br>
    <a class="btn btn-secondary" asp-page="./Buscar">Buscar</a>
    <br>
    <table class="table">
        <br>
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombres</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Documentos</th>
                <th scope="col">Email</th>
                <th scope="col">Actualizar</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>
        @foreach (var p in @Model.familiares)

        {
            <tr>
                <td data-titulo="Id">@p.Id</td>
                <td data-titulo="Nombres">@p.Nombres</td>
                <td data-titulo="Apellidos">@p.Apellidos</td>
                <td data-titulo="Identificación">@p.DocumentoIdentidad</td>
                <td data-titulo="Email">@p.Email</td>
                <td data-titulo="Actualizar"><a class="btn btn-secondary" asp-page="./Actualizar"
                    asp-route-id="@p.Id">Actualizar</a></td>
                <td data-titulo="Eliminar"><a class="btn btn-secondary" asp-page="./Eliminar"
                    asp-route-id="@p.Id">Eliminar</a></td>
            </tr>
        }
    </table>
    <a class="btn btn-primary" asp-page="/FamiliarF/Agregar">Agregar</a>
</div>