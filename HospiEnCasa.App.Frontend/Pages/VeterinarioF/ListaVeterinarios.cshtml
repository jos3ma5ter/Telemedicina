@page
@model HospiEnCasa.App.Frontend.Pages.VeterinarioF.ListaVeterinariosModel
@{
}
<div class="formularios">
    <h1>Listado De Los Veterinarios</h1>
    <table class="table">
        <br>
        <a class="btn btn-secondary" asp-page="/VeterinarioF/Buscar">Buscar </a>
        <br><br>
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombres</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Documento</th>
                <th scope="col">Tarjeta Profesional</th>
                <th scope="col">Mascota</th>
                <th scope="col">Actualizar</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>
        @foreach (var p in @Model.veterinario)
        {
            <tr>
                <td data-titulo="Id">@p.Id</td>
                <td data-titulo="Nombres">@p.Nombres</td>
                <td data-titulo="Apellidos">@p.Apellidos</td>
                <td data-titulo="Identificación">@p.DocumentoIdentidad</td>
                <td data-titulo="No. Profesional">@p.TarjetaProfesional</td>
                <td data-titulo="Mascota"><a class="btn btn-secondary" asp-page="../MascotaF/ListaMascotas"
                    asp-route-id="@p.Id">Mascota</a></td>
                <td data-titulo="Actualizar"><a class="btn btn-secondary" asp-page="./Actualizar"
                    asp-route-id="@p.Id">Actualizar</a></td>
                <td data-titulo="Eliminar"><a class="btn btn-secondary" asp-page="./Eliminar"
                    asp-route-id="@p.Id">Eliminar</a></td>
            </tr>
        }
    </table>
    <a class="btn btn-primary" asp-page="/VeterinarioF/Agregar">Agregar</a>

</div>