@page
@model HospiEnCasa.App.Frontend.Pages.HistoriaF.ListaHistoriasModel
@{
}
<div class="formularios">
    <h1>Listado de Historias Clinicas</h1>
    <table class="table">
        <br>
        <a class="btn btn-secondary" asp-page="/HistoriaF/Buscar">Buscar </a>
        <br> <br>
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Diagnostico</th>
                <th scope="col"></th>
                <th scope="col">Sugerencia Cuidado</th>
                <th scope="col">Actualizar</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>
        @foreach (var p in @Model.historia)

        {
            <tr>
                <td data-titulo="Id">@p.Id</td>
                <td data-titulo="Diagnóstico">@p.Diagnostico</td>
                <td data-titulo="Sugerencia"><a class="btn btn-secondary" asp-page="./AddSugerenciaLista"
                    asp-route-id="@p.Id">Sugerencia</a></td>
                <td data-titulo="Actualizar"><a class="btn btn-secondary" asp-page="./Actualizar"
                    asp-route-id="@p.Id">Actualizar</a></td>
                <td data-titulo="Eliminar"><a class="btn btn-secondary" asp-page="./Eliminar"
                    asp-route-id="@p.Id">Eliminar</a></td>
            </tr>
        }
    </table>
    <a class="btn btn-primary" asp-page="/HistoriaF/Agregar">Agregar</a>
</div>